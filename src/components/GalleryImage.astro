---
interface Props {
  src: string;
  description?: string;
  align?: string;
}

const { src, description, align = "center" } = Astro.props;
---

<div
  class="group relative aspect-square text-md bg-cover bg-center p-10 overflow-hidden"
  style={{backgroundImage: `url("${src}")`, backgroundPosition: align}}
  title={description}
>
</div>
