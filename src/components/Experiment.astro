---
interface Props {
  name: string;
  site: string;
  emoji: string;
  header?: string;
  headerBg?: string;
}
const { name, site, emoji, header, headerBg } = Astro.props;
---

<a href={site} target="_blank">
  <div class="border border-zinc-600 rounded-lg h-full overflow-hidden group">
    {
      header ? (
        <div
          class:list={[
            "w-full aspect-[2/1] bg-contain bg-center bg-no-repeat",
            headerBg,
          ]}
          style={{ backgroundImage: `url("${header}")` }}
        />
      ) : (
        <div class="w-full bg-zinc-600 aspect-[2/1]" />
      )
    }

    <div class="flex items-start p-5">
      <img
        src={`https://emojicdn.elk.sh/${emoji}`}
        alt={name}
        class="mr-5 rounded-md w-20"
      />

      <div class="text-left">
        <h3 class="text-3xl font-bold mb-2">
          <span class="align-middle">{name}</span>
          <svg
            class="transition-opacity opacity-0 group-hover:opacity-100 inline fill-purple-400 ml-1 align-middle"
            width="25"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 512 512"
            ><!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
            <path
              d="M320 0c-17.7 0-32 14.3-32 32s14.3 32 32 32l82.7 0L201.4 265.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L448 109.3l0 82.7c0 17.7 14.3 32 32 32s32-14.3 32-32l0-160c0-17.7-14.3-32-32-32L320 0zM80 32C35.8 32 0 67.8 0 112L0 432c0 44.2 35.8 80 80 80l320 0c44.2 0 80-35.8 80-80l0-112c0-17.7-14.3-32-32-32s-32 14.3-32 32l0 112c0 8.8-7.2 16-16 16L80 448c-8.8 0-16-7.2-16-16l0-320c0-8.8 7.2-16 16-16l112 0c17.7 0 32-14.3 32-32s-14.3-32-32-32L80 32z"
            ></path></svg
          >
        </h3>

        <p class="text-md"><slot /></p>
      </div>
    </div>
  </div>
</a>
